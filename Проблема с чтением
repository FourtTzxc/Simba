package Lesson15;

import java.io.*;
import java.nio.charset.StandardCharsets;
/*
кирилица все равно номально не читатся хотя кодировка указана
 */

public class Ex3 {
    public static void main(String[] args) {
        var fileOne = new File("src//Files//Lesson15//Ex3//FileOne.txt");
        var fileTwo = new File("src//Files//Lesson15//Ex3//FileTwo.txt");
        try(var buffWriter = new BufferedWriter(new FileWriter(fileTwo));
        var buffReader = new BufferedReader(new InputStreamReader(new FileInputStream(fileOne), "UTF-8"))){
            buffWriter.write(buffReader.readLine());
        }catch (IOException e){
            e.printStackTrace();
            e.getMessage();
        }

    }
}
